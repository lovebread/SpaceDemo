<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    Username:<br />
    <%= f.text_field :username %>
  </p>
  <p>
    Email:<br />
    <%= f.text_field :email %>
  </p>
  <p>
    Password:<br />
    <%= f.password_field :password %>
  </p>
  <p>
    Password Confirmation:<br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    Profile:<br />
    <%= f.text_area :profile %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
<%= link_to 'Back', users_path %>